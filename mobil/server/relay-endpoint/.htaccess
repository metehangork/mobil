# Güvenlik için sadece POST isteklerine izin ver (GET engellensin)
<IfModule mod_rewrite.c>
  RewriteEngine On
  # GET isteklerini engelle, sadece POST/OPTIONS'a izin ver
  RewriteCond %{REQUEST_METHOD} !^(POST|OPTIONS)$
  RewriteRule ^send-mail\.php$ - [R=405,L]
</IfModule>

# Sadece belirli IP'den erişime izin ver (ana API sunucunuz). 
# Not: Paylaşımlı barındırmada gerçek istemci IP'si farklı görünebilir, test edin.
#<RequireAll>
#  Require ip 212.58.14.118
#</RequireAll>

# Güvenlik başlıkları (opsiyonel)
<IfModule mod_headers.c>
  Header set X-Content-Type-Options "nosniff"
  Header set X-Frame-Options "SAMEORIGIN"
  Header set Referrer-Policy "no-referrer-when-downgrade"
  Header set X-XSS-Protection "1; mode=block"
</IfModule>
